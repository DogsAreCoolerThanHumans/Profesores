<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_gradient">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/com_cr_pr_profesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Profesor"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorPrimaryDark"

        android:textSize="25sp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/re_dv2"
        app:layout_constraintTop_toBottomOf="@+id/re_dv2" />

    <ImageView
        android:id="@+id/re_pr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:fillColor="#9999"

        android:src="@drawable/ic_profesores"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/editText"
        app:layout_constraintEnd_toStartOf="@id/editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0
" />

    <ImageView
        android:id="@+id/re_sr"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_search"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/editText"
        app:layout_constraintEnd_toStartOf="@id/re_us"
        app:layout_constraintStart_toEndOf="@id/editText" />


    <ImageView
        android:id="@+id/re_us"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#00FFFFFF"

        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/ic_usuario_circle"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/re_sr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="right"
        android:hint="Search  "
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@id/re_sr"

        app:layout_constraintStart_toEndOf="@id/re_pr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <View
        android:id="@+id/re_dv"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="20dp"

        android:layout_marginTop="10dp"
        android:background="@color/cardview_light_background"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/com_cr_pr_tv_curso"

        app:layout_constraintEnd_toEndOf="@id/re_us"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/re_pr"
        app:layout_constraintTop_toBottomOf="@id/re_sr" />

    <ImageView
        android:id="@+id/com_cr_pr_curs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"

        android:layout_marginTop="28dp"
        android:fillColor="#9999"
        android:src="@drawable/ic_cursos"

        android:tint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_dv" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/com_cr_pr_tv_curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Curso"
        android:textColorHint="@color/colorPrimaryDark"
        app:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"

        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/re_dv2"
        app:layout_constraintTop_toBottomOf="@+id/re_dv"
        app:layout_constraintTop_toTopOf="@id/com_cr_pr_curs"/>


    <View
        android:id="@+id/re_dv2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_margin="20dp"

        android:background="@color/cardview_light_background"
        android:tint="@color/colorAccent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/com_cr_pr_curs"
        app:layout_constraintTop_toBottomOf="@+id/com_cr_pr_tv_curso" />

    <ImageView
        android:id="@+id/com_pr_cr_rating"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"

        android:src="@drawable/ic_favoritos"
        android:tint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@id/fragment_com_profesores_cursos_tv_title"
        app:layout_constraintTop_toBottomOf="@id/re_comments" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/com_cr_pr_rating_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="5dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="4.5"

        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/re_comments"
        app:layout_constraintTop_toBottomOf="@id/re_comments" />

    <ImageView
        android:id="@+id/re_comments"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_comentario"
        android:tint="@color/colorAccent"

        app:layout_constraintTop_toBottomOf="@id/com_cr_pr_curs"
        app:layout_constraintStart_toStartOf="@id/fragment_com_profesores_cursos_tv_title" />



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/com_pr_cr_comments_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="69"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="5dp"

        app:layout_constraintTop_toBottomOf="@id/com_cr_pr_curs"
        app:layout_constraintStart_toEndOf="@id/re_comments"/>

    <ImageView
        android:id="@+id/re_likes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_like"
        android:tint="@color/colorAccent"
        android:layout_marginHorizontal="5dp"

        app:layout_constraintTop_toBottomOf="@id/com_cr_pr_curs"
        app:layout_constraintStart_toEndOf="@id/com_pr_cr_comments_count"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/com_pr_cr_likes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="5dp"

        app:layout_constraintTop_toBottomOf="@id/com_cr_pr_curs"
        app:layout_constraintStart_toEndOf="@id/re_likes"/>

    <ImageView
        android:id="@+id/re_dislikes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_dislike"
        android:tint="@color/colorAccent"
        android:layout_marginHorizontal="5dp"

        app:layout_constraintTop_toBottomOf="@id/com_cr_pr_curs"
        app:layout_constraintStart_toEndOf="@id/com_pr_cr_likes_count"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/com_pr_cr_dislikes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="5dp"

        app:layout_constraintTop_toBottomOf="@id/com_cr_pr_curs"
        app:layout_constraintStart_toEndOf="@id/re_dislikes"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragment_com_profesores_cursos_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_marginTop="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/com_pr_cr_rating" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_com_cursos_profesores_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00F7F7F7"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_com_profesores_cursos_tv_title"
        app:layout_constraintVertical_bias="0.03" />


</androidx.constraintlayout.widget.ConstraintLayout>