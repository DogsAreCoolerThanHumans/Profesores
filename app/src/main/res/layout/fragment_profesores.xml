<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_gradient">

    <ImageView
        android:id="@+id/pr_pr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillColor="#9999"
        android:src="@drawable/ic_profesores"
        app:layout_constraintBottom_toBottomOf="@id/editText"
        app:layout_constraintEnd_toStartOf="@id/editText"
        app:layout_constraintStart_toStartOf="parent"
        android:tint="@color/colorAccent"
        />

    <ImageView
        android:id="@+id/pr_sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@id/editText"
        app:layout_constraintEnd_toStartOf="@id/pr_us"
        app:layout_constraintStart_toEndOf="@id/editText"
        android:tint="@color/colorAccent"
        />


    <ImageView
        android:id="@+id/pr_us"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/ic_usuario_circle"
        app:layout_constraintBottom_toBottomOf="@id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pr_sr"
        android:tint="@color/colorAccent"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:gravity="right"
        android:hint="Search  "
        android:inputType="textPersonName"

        app:layout_constraintEnd_toStartOf="@id/pr_sr"
        app:layout_constraintStart_toEndOf="@id/pr_pr"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/colorAccent"/>

    <View
        android:id="@+id/pr_dv"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"


        android:tint="@color/colorAccent"
        android:background="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@id/fragment_profesores_tv_title"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintEnd_toEndOf="@id/pr_us"
        app:layout_constraintStart_toStartOf="@+id/pr_pr"
        app:layout_constraintTop_toBottomOf="@id/pr_sr" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragment_profesores_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profesores"
        android:textColor="@android:color/white"
        android:textSize="30sp"

        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pr_dv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_name_professors_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00F7F7F7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_profesores_tv_title" />





</androidx.constraintlayout.widget.ConstraintLayout>