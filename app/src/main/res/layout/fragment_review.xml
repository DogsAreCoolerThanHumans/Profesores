<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_gradient"
    android:id="@+id/fragmentReview">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/re_profesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="Nombre Curso"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorPrimaryDark"

        android:textSize="25sp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/re_dv2"
        app:layout_constraintTop_toBottomOf="@+id/re_dv2"
        app:layout_constraintBottom_toBottomOf="@id/re_curs"/>

    <ImageView
        android:id="@+id/re_pr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:fillColor="#9999"

        android:src="@drawable/ic_profesores"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/re_searchEdit"
        app:layout_constraintEnd_toStartOf="@id/re_searchEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:id="@+id/re_sr"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_search"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/re_searchEdit"
        app:layout_constraintEnd_toStartOf="@id/re_us"
        app:layout_constraintStart_toEndOf="@id/re_searchEdit" />


    <ImageView
        android:id="@+id/re_us"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#00FFFFFF"

        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/ic_usuario_circle"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/re_searchEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/re_sr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <EditText
        android:id="@+id/re_searchEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="right"
        android:hint="Search  "
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@id/re_sr"

        app:layout_constraintStart_toEndOf="@id/re_pr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <View
        android:id="@+id/re_dv"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="20dp"

        android:layout_marginTop="10dp"
        android:background="@color/cardview_light_background"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/re_input_profesor"

        app:layout_constraintEnd_toEndOf="@id/re_us"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/re_pr"
        app:layout_constraintTop_toBottomOf="@id/re_sr" />

    <ImageView
        android:id="@+id/re_curs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"

        android:layout_marginTop="28dp"
        android:fillColor="#9999"
        android:src="@drawable/ic_review"

        android:tint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_dv" />


    <AutoCompleteTextView
        android:id="@+id/re_input_profesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:completionThreshold="1"

        android:hint="Nombre Profesor"
        android:textColorHint="@color/colorPrimaryDark"
        app:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"

        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/re_dv2"
        app:layout_constraintTop_toBottomOf="@+id/re_dv"
        app:layout_constraintTop_toTopOf="@id/re_curs"/>


    <View
        android:id="@+id/re_dv2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"

        android:background="@color/cardview_light_background"

        android:tint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/re_curs"
        app:layout_constraintTop_toBottomOf="@+id/re_input_profesor" />

    <ImageView
        android:id="@+id/re_comments"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_comentario"
        android:tint="@color/colorAccent"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/re_curs"
        app:layout_constraintStart_toStartOf="@id/re_tv_title" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/re_comments_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="69"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/re_curs"
        app:layout_constraintStart_toEndOf="@id/re_comments"/>

    <ImageView
        android:id="@+id/re_likes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_like"
        android:tint="@color/colorAccent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/re_curs"
        app:layout_constraintStart_toEndOf="@id/re_comments_count"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/re_likes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/re_curs"
        app:layout_constraintStart_toEndOf="@id/re_likes"/>

    <ImageView
        android:id="@+id/re_dislikes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_dislike"
        android:tint="@color/colorAccent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/re_curs"
        app:layout_constraintStart_toEndOf="@id/re_likes_count"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/re_dislikes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/re_curs"
        app:layout_constraintStart_toEndOf="@id/re_dislikes"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/re_register_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/ic_card_gradient"
        android:gravity="center"
        android:layout_marginTop="10dp"

        android:text="Registrar prof/curs/rel"
        android:textAllCaps="false"
        android:textColor="#591D59"
        android:textSize="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/re_comments"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/re_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Review"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_marginTop="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_register_btn" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/re_tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating:"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="5dp"

        app:layout_constraintStart_toStartOf="@id/re_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/re_tv_title" />

    <ImageView
        android:id="@+id/re_rating"
        android:layout_width="30dp"
        android:layout_height="30dp"


        android:src="@drawable/ic_rating"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/re_tv_rating"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup" />

    <!--
    <androidx.appcompat.widget.AppCompatre_searchEdit
        android:id="@+id/rating_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"

        android:hint="[1...5]"
        app:backgroundTint="@color/colorPrimary"
        android:textColorHint="@color/colorPrimaryDark"

        app:layout_constraintEnd_toEndOf="@id/re_dislikes_count"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/re_tv_rating"
        app:layout_constraintTop_toBottomOf="@id/re_tv_title"
        />
        -->

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:outlineSpotShadowColor="@color/design_default_color_on_primary"
        app:layout_constraintBottom_toBottomOf="@id/re_tv_rating"
        app:layout_constraintStart_toEndOf="@id/re_tv_comments"
        app:layout_constraintTop_toBottomOf="@id/re_tv_title"
        app:layout_constraintEnd_toEndOf="@id/re_comentario_box">

        <RadioButton
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="1"
            android:textColor="@color/colorPrimary" />

        <RadioButton
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="2"
            android:textColor="@color/colorPrimary" />

        <RadioButton
            android:id="@+id/r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="3"
            android:textColor="@color/colorPrimary" />

        <RadioButton
            android:id="@+id/r4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="4"
            android:textColor="@color/colorPrimary" />

        <RadioButton
            android:id="@+id/r5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:text="5"
            android:textColor="@color/colorPrimary"
            android:textColorHighlight="@color/colorPrimary" />
    </RadioGroup>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/re_tv_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments:"
        android:textColor="@android:color/white"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="@id/re_tv_rating"
        app:layout_constraintTop_toBottomOf="@+id/re_tv_rating" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/re_comentario_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/ic_card_gradient"
        android:divider="@android:color/transparent"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/re_tv_comments"

        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/re_comentario_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0"

            android:layout_margin="16dp"
            android:src="@drawable/ic_comentario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="@color/colorAccent"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/re_comentario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="20dp"

            android:elevation="20dp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:justificationMode="inter_word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/re_comentario_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:gravity="top"
            app:backgroundTint="@color/colorPrimary"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint="Comentarios sobre el profesor"

            android:maxLength="280"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/re_finish_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/ic_card_gradient"

        android:gravity="center"

        android:text="Registrar Review"
        android:textAllCaps="false"
        android:textColor="#591D59"
        android:textSize="25dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/re_comentario_box"
        app:layout_constraintVertical_bias="0." />


</androidx.constraintlayout.widget.ConstraintLayout>