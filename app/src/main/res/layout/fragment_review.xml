<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_gradient">

    <ImageView
        android:id="@+id/re_pr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:fillColor="#9999"

        android:src="@drawable/ic_profesores"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/editText"
        app:layout_constraintEnd_toStartOf="@id/editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0
" />

    <ImageView
        android:id="@+id/re_sr"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_search"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/editText"
        app:layout_constraintEnd_toStartOf="@id/re_us"
        app:layout_constraintStart_toEndOf="@id/editText" />


    <ImageView
        android:id="@+id/re_us"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#00FFFFFF"

        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/ic_usuario_circle"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/re_sr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="right"
        android:hint="Search  "
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@id/re_sr"

        app:layout_constraintStart_toEndOf="@id/re_pr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <View
        android:id="@+id/re_dv"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="20dp"

        android:layout_marginTop="10dp"
        android:background="@color/cardview_light_background"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/fragment_profesores_tv_title"

        app:layout_constraintEnd_toEndOf="@id/re_us"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/re_pr"
        app:layout_constraintTop_toBottomOf="@id/re_sr" />

    <ImageView
        android:id="@+id/re_prof"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"

        android:layout_marginTop="28dp"
        android:fillColor="#9999"
        android:src="@drawable/ic_review"

        android:tint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_dv" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragment_profesores_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Profesor"
        android:textColor="@android:color/white"

        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/re_dv2"
        app:layout_constraintTop_toBottomOf="@+id/re_dv" />

    <View
        android:id="@+id/re_dv2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_margin="20dp"

        android:background="@color/cardview_light_background"
        android:tint="@color/colorAccent"

        app:layout_constraintBottom_toTopOf="@+id/fragment_review_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/re_prof"
        app:layout_constraintTop_toBottomOf="@+id/fragment_profesores_tv_title"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/re_comments"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_comentario"
        android:tint="@color/colorAccent"

        app:layout_constraintTop_toBottomOf="@id/re_prof"
        app:layout_constraintStart_toStartOf="@id/fragment_review_tv_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/re_comments_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="69"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="5dp"

        app:layout_constraintTop_toBottomOf="@id/re_prof"
        app:layout_constraintStart_toEndOf="@id/re_comments"/>

    <ImageView
        android:id="@+id/re_likes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_like"
        android:tint="@color/colorAccent"
        android:layout_marginHorizontal="5dp"

        app:layout_constraintTop_toBottomOf="@id/re_prof"
        app:layout_constraintStart_toEndOf="@id/re_comments_count"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/re_likes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="5dp"

        app:layout_constraintTop_toBottomOf="@id/re_prof"
        app:layout_constraintStart_toEndOf="@id/re_likes"/>

    <ImageView
        android:id="@+id/re_dislikes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_dislike"
        android:tint="@color/colorAccent"
        android:layout_marginHorizontal="5dp"

        app:layout_constraintTop_toBottomOf="@id/re_prof"
        app:layout_constraintStart_toEndOf="@id/re_likes_count"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/re_dislikes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginHorizontal="5dp"

        app:layout_constraintTop_toBottomOf="@id/re_prof"
        app:layout_constraintStart_toEndOf="@id/re_dislikes"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragment_review_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_marginTop="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_comments" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragment_review_tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating:"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="5dp"

        app:layout_constraintStart_toStartOf="@id/fragment_review_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/fragment_review_tv_title" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/rating_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"

        android:hint="[1...5]"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"

        app:layout_constraintEnd_toEndOf="@id/re_dislikes_count"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/fragment_review_tv_rating"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_tv_title" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"

        app:layout_constraintStart_toEndOf="@id/rating_input"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_tv_title"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragment_review_tv_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments:"
        android:textColor="@android:color/white"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="@id/fragment_review_tv_rating"
        app:layout_constraintTop_toBottomOf="@+id/fragment_review_tv_rating" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comentario_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/ic_card_gradient"
        android:divider="@android:color/transparent"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_tv_comments"

        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/comentario_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0"

            android:layout_margin="16dp"
            android:src="@drawable/ic_comentario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="@color/colorAccent"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/comentario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="20dp"

            android:elevation="20dp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:justificationMode="inter_word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/comentario_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:gravity="top"
            android:textColorHint="@color/colorAccent"
            android:hint="El coral blanco o el ambiente que estamos manejando, lo estamos contaminando de una manera inigmi, i, im, inimaginablemente, inig, inigmante. Esto quiere decir que el coral blanco se está maltratando, eh, pues esas algas rojas. Eh, las algas verde puede servir como combustible."
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/re_finish_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/ic_card_gradient"

        android:gravity="center"

        android:text="Post Review"
        android:textAllCaps="false"
        android:textColor="#591D59"
        android:textSize="25dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentario_box"
        app:layout_constraintVertical_bias="0." />


</androidx.constraintlayout.widget.ConstraintLayout>